<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <TextView
                android:id="@+id/areadatabasecreator_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/fcmain_textsize_medium"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="@string/areadatabasecreator_text"/>

        <ProgressBar
                android:id="@+id/areadatabasecreator_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/areadatabasecreator_textview"
                android:layout_gravity="center_horizontal"
                android:minHeight="20dp"
                android:maxHeight="20dp"
                android:scaleY="2"
                android:minWidth="100dp"
                android:max="100"
                android:indeterminate="false"
                android:progress="1"/>

        <TextView
                android:id="@+id/areadatabasecreator_textinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/areadatabasecreator_progressbar"
                android:textSize="@dimen/fcmain_textsize_medium"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:singleLine="false"
                android:minLines="2"
                android:lines="2"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="@string/areadatabasecreator_text"/>

</RelativeLayout>