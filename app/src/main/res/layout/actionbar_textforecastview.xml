<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionbar_textforecastview_maincontainer"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/actionbar_textforecastview_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:id="@+id/actionbar_textforecastview_linearcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_toRightOf="@id/actionbar_textforecastview_icon">

        <TextView
            android:id="@+id/actionbar_textforecastview_type"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="left"
            android:textSize="@dimen/fcmain_textsize_medium_fixed"
            android:textColor="?attr/colorText" />

        <TextView
            android:id="@+id/actionbar_textforecastview_issued"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="left"
            android:textSize="@dimen/fcmain_textsize_medium_fixed"
            android:textColor="?attr/colorText" />

    </LinearLayout>

</RelativeLayout>